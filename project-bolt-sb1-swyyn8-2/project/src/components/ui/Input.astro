---
interface Props {
  type?: string;
  placeholder?: string;
  required?: boolean;
  class?: string;
}

const { 
  type = 'text',
  placeholder = '',
  required = false,
  class: className = ''
} = Astro.props;

const baseStyles = "px-4 py-3 rounded-lg text-gray-900 placeholder-gray-500 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent";
---

<input
  type={type}
  placeholder={placeholder}
  required={required}
  class:list={[baseStyles, className]}
/>