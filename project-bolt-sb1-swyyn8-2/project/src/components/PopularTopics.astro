---
import { popularTopics } from '../data/topics';
---

<div class="bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
    <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
    </svg>
    Popular Topics
  </h2>
  <div class="space-y-3">
    {popularTopics.map((topic) => (
      <a href={topic.href} class="flex items-center justify-between p-2 hover:bg-gray-50 rounded-md group">
        <span class="text-gray-700 group-hover:text-emerald-600">{topic.name}</span>
        <span class="text-sm text-gray-400">{topic.count} articles</span>
      </a>
    ))}
  </div>
</div>